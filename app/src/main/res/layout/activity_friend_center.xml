<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
              <include layout="@layout/action_bar"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/rl_action"
                  android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="100dp">
            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:scaleType="fitXY"
                       android:id="@+id/iv_friends"
                       android:layout_marginLeft="15dp"
                       android:src="@drawable/meinv"/>
            <LinearLayout android:layout_toRightOf="@+id/iv_friends"
                          android:layout_marginLeft="8dp"
                          android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">
             <RelativeLayout android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                 <TextView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/tv_friends_name"
                           android:textColor="@color/text_bg"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           android:text="美美"/>
                 <RelativeLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginRight="15dp"
                                 android:layout_alignParentRight="true">
                     <ImageView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_chat_like"/>
                     <TextView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="10sp"
                               android:layout_marginLeft="10dp"
                               android:textColor="@color/chat_like_color"
                               android:text="999+"/>
                 </RelativeLayout>
             </RelativeLayout>
                <TextView android:layout_width="match_parent"
                          android:lines="2"
                          android:textColor="@color/important_instance"
                          android:ellipsize="end"
                          android:layout_marginTop="10dp"
                          android:layout_marginRight="15dp"
                          android:text="q11111111111111111111111111111111111111111111111111qqqqqqqqqqqqqqqq"
                          android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="match_parent" 
                              android:layout_height="wrap_content"
                              android:layout_marginRight="15dp"
                              android:layout_marginTop="10dp"
                              android:orientation="horizontal">
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="18dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_vertical"
                                       android:src="@drawable/icon_store"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/text_bg"
                                      android:textSize="14sp"
                                      android:layout_gravity="center_vertical"
                                      android:text="商城等级"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="18dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_vertical"
                                       android:src="@drawable/icon_memberlevel"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/text_bg"
                                      android:textSize="14sp"
                                      android:layout_gravity="center_vertical"
                                      android:text="会员等级"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="18dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_vertical"
                                       android:src="@drawable/icon_credit"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/text_bg"
                                      android:textSize="14sp"
                                      android:layout_gravity="center_vertical"
                                      android:text="信用等级"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView android:layout_width="match_parent"
               android:background="@color/white_theme"
               android:layout_height="10dp"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_scan_chat_record"
                    android:layout_height="40dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/text_bg"
                  android:textSize="14sp"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="15dp"
                  android:layout_centerVertical="true"
                  android:text="查看聊天记录"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/icon_right"/>
    </RelativeLayout>
    <ImageView android:layout_width="match_parent"
               android:background="@color/white_theme"
               android:layout_height="0.5dp"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_black_name"
                    android:layout_height="40dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_black_name"
                  android:textColor="@color/text_bg"
                  android:textSize="14sp"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="15dp"
                  android:layout_centerVertical="true"
                  android:text="拉黑名单"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/icon_right"/>
    </RelativeLayout>
    <ImageView android:layout_width="match_parent"
               android:background="@color/white_theme"
               android:layout_height="0.5dp"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_detele_friends"
                    android:layout_height="40dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/text_bg"
                  android:textSize="14sp"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="15dp"
                  android:layout_centerVertical="true"
                  android:text="删除好友"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/icon_right"/>
    </RelativeLayout>
    <ImageView android:layout_width="match_parent"
               android:background="@color/white_theme"
               android:layout_height="0.5dp"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/password_tips"
                    android:id="@+id/add_friends"
                    android:layout_alignParentBottom="true"
                    android:layout_height="50dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_add_or_chat"
                  android:textColor="@color/white"
                  android:textSize="16sp"
                  android:layout_centerInParent="true"
                  android:text="添加好友/立即聊天"/>
    </RelativeLayout>
</RelativeLayout>