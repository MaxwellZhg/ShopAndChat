<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:orientation="vertical">
<RelativeLayout android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="130dp">
          <ImageView android:layout_width="90dp"
                     android:layout_height="90dp"
                     android:id="@+id/iv_store_icon"
                     android:scaleType="fitXY"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="15dp"
                     android:src="@drawable/meinv"/>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_store_icon">
                   <LinearLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:id="@+id/ll_store_name"
                                 android:orientation="horizontal">
                       <ImageView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_gravity="center_vertical"
                                  android:src="@drawable/icon_store_shop"/>
                       <TextView android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginLeft="8dp"
                                 android:textSize="16sp"
                                 android:textColor="@color/text_bg"
                                 android:text="跑腿兔旗舰店"/>
                   </LinearLayout>
                   <LinearLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:id="@+id/ll_store_level"
                                 android:layout_below="@+id/ll_store_name"
                                 android:orientation="horizontal">

                   </LinearLayout>
                  <LinearLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll_store_level"
                                android:layout_marginTop="40dp"
                               android:orientation="horizontal">
                      <ImageView android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center_vertical"
                                 android:src="@drawable/icon_store_like"/>
                      <TextView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/tv_price_color"
                                android:text="1254人收藏"/>
                  </LinearLayout>
    </RelativeLayout>
    <ImageView android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_alignParentBottom="true"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
              android:background="@color/line_color"/>
</RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_marginTop="10dp"
                 android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/text_bg"
                  android:textSize="16sp"
                  android:text="注册人    "/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/important_instance"
                  android:textSize="16sp"
                  android:layout_marginLeft="15dp"
                  android:text="苍井空"/>
    </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_bg"
                      android:textSize="16sp"
                      android:text="联系方式"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/important_instance"
                      android:textSize="16sp"
                      android:layout_marginLeft="15dp"
                      android:text="15814096599"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/text_bg"
                      android:textSize="16sp"
                      android:text="注册地址"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/important_instance"
                      android:textSize="16sp"
                      android:layout_marginLeft="15dp"
                      android:text="北京市西长安街1号中南海紫光阁习主席住所"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
               android:layout_height="10dp"
               android:background="@color/line_color"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white">
             <TextView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:textColor="@color/text_bg"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="15dp"
                       android:text="店内所有商品"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   android:src="@drawable/icon_right"/>
    </RelativeLayout>
</LinearLayout>