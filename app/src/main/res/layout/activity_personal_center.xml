<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="250dp">
             <ImageView android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@drawable/img_person_center"/>
             <ImageView android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/iv_center"
                        android:src="@drawable/meinv"
                        android:scaleType="fitXY"
                        android:background="@drawable/person_center_img_bg"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="50dp">
            <RelativeLayout android:layout_width="55dp"
                            android:id="@+id/rl_btn_back"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_height="match_parent">
                <ImageView android:id="@+id/iv_back"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerInParent="true"
                           android:layout_marginLeft="15dp"
                           android:background="@drawable/nav_black"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:layout_marginTop="5dp"
                  android:id="@+id/tv_name"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/text_bg"
                  android:text="美女"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp">
         <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:lines="2"
                   android:id="@+id/tv_tips"
                   android:gravity="center"
                   android:text="111111111111111111111111111111111111111111111111111111111111111111111111111"
                   android:ellipsize="end"
                   android:textColor="@color/important_instance"/>
    </RelativeLayout>
    <ImageView android:layout_width="match_parent"
               android:background="@color/white_theme"
               android:layout_height="10dp"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_city_user"
                    android:layout_height="40dp">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:id="@+id/iv_user_city"
                   android:src="@drawable/icon_user_viewcityusers"/>
        <TextView android:layout_toRightOf="@+id/iv_user_city"
                  android:text="查看同城用户"
                  android:layout_marginLeft="8dp"
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   android:src="@drawable/icon_right"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginLeft="15dp"
                   android:layout_alignParentBottom="true"
                   android:layout_marginRight="15dp"
                   android:background="@color/white_theme"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_my_order"
                    android:layout_height="40dp">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:id="@+id/iv_user_order"
                   android:src="@drawable/icon_user_myindent"/>
        <TextView android:layout_toRightOf="@+id/iv_user_order"
                  android:text="我的订单"
                  android:layout_marginLeft="8dp"
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   android:src="@drawable/icon_right"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginLeft="15dp"
                   android:layout_alignParentBottom="true"
                   android:layout_marginRight="15dp"
                   android:background="@color/white_theme"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_my_address"
                    android:layout_height="40dp">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:id="@+id/iv_user_address"
                   android:src="@drawable/icon_user_address"/>
        <TextView android:layout_toRightOf="@+id/iv_user_address"
                  android:text="收获地址管理"
                  android:layout_marginLeft="8dp"
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   android:src="@drawable/icon_right"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginLeft="15dp"
                   android:layout_alignParentBottom="true"
                   android:layout_marginRight="15dp"
                   android:background="@color/white_theme"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
           <Button android:layout_width="250dp"
                   android:layout_height="40dp"
                   android:id="@+id/rl_login_out"
                   android:layout_marginTop="50dp"
                   android:text="退出登录"
                   android:textSize="18sp"
                   android:layout_centerHorizontal="true"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:layout_centerVertical="true"
           android:background="@drawable/login_btn_bg"/>
    </RelativeLayout>
</LinearLayout>