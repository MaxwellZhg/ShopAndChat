<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                xmlns:app="http://schemas.android.com/apk/res-auto">
 <android.support.v7.widget.CardView android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     app:cardCornerRadius="12dp"
                                     android:layout_marginTop="10dp"
                                     android:layout_marginLeft="5dp"
                                     android:layout_marginRight="5dp"
                                     app:cardElevation="4dp"
                                     android:background="@color/white">
     <RelativeLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">
      <ImageView android:layout_width="170dp"
                 android:id="@+id/iv_street_brands"
                 android:src="@drawable/meinv"
                 android:scaleType="fitXY"
                 android:layout_centerHorizontal="true"
                 android:layout_height="175dp"/>
         <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="10dp"
                   android:id="@+id/tv_brands_name"
                   android:textColor="@color/text_bg"
                   android:textSize="18sp"
                   android:layout_below="@+id/iv_street_brands"
                  android:text="111111111111111111111111"/>
         <RelativeLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="25dp"
                         android:layout_marginBottom="10dp"
                         android:layout_below="@+id/tv_brands_name">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:id="@+id/tv_price"
                          android:layout_alignParentLeft="true"
                          android:textStyle="bold"
                          android:layout_marginLeft="15dp"
                          android:textColor="@color/tv_price_color"
                          android:text="¥180"/>
             <TextView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:id="@+id/tv_sale_count"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:textColor="@color/important_instance"
                       android:text="已售1408件"/>
         </RelativeLayout>
     </RelativeLayout>
 </android.support.v7.widget.CardView>
</RelativeLayout>