<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="90dp">
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:scaleType="fitXY"
                   android:id="@+id/iv_good_in_order"
                   android:layout_marginLeft="15dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/meinv"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:id="@+id/ll_tips"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="15dp"
                      android:layout_toRightOf="@+id/iv_good_in_order"
                      android:layout_toLeftOf="@+id/ll_tips_price"
                      android:layout_centerVertical="true"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:id="@+id/tv_title"
                      android:textColor="@color/text_bg"
                      android:lines="2"
                      android:text="野餐篮水果篮小竹篮野餐篮水果篮小竹篮野餐篮水果篮小竹篮野餐篮水果篮小竹篮"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_attrs"
                      android:textColor="@color/important_instance"
                      android:layout_marginTop="5dp"
                      android:textSize="12sp"
                      android:text="已选：野餐篮水果篮小竹篮野餐篮水竹篮野餐篮水"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="15dp"
                      android:id="@+id/ll_tips_price"
                      android:layout_centerVertical="true"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:id="@+id/tv_money"
                      android:textColor="@color/tv_price_color"
                      android:lines="2"
                      android:text="¥186"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/important_instance"
                      android:layout_marginTop="5dp"
                      android:id="@+id/tv_count"
                      android:layout_gravity="right"
                      android:textSize="12sp"
                      android:text="×1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>