<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/rl_action"
                android:background="@color/line_color"
                android:layout_height="50dp">
              <RelativeLayout android:layout_width="55dp"
                              android:id="@+id/rl_btn_back"
                              android:layout_centerVertical="true"
                              android:layout_marginLeft="8dp"
                              android:layout_height="match_parent">
                <ImageView android:id="@+id/iv_back"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerInParent="true"
                           android:layout_marginLeft="15dp"
                           android:background="@drawable/nav_black"/>
              </RelativeLayout>
             <TextView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:id="@+id/tv_center_title"
                       android:layout_centerInParent="true"
                      android:text="actionbar"/>
    <RelativeLayout android:layout_width="50dp"
                    android:id="@+id/rl_btn_scope"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_scope"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:layout_marginRight="15dp"
                   android:src="@drawable/nav_search"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_save"
                  android:textSize="18sp"
                  android:textColor="@color/white"
                  android:layout_centerInParent="true"
                 />
    </RelativeLayout>
</RelativeLayout>