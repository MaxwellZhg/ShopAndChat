<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <shopandclient.ssf.com.shopandclient.weiget.bananer.view.SwipeMenuLayout
            android:layout_width="match_parent"
            android:id="@+id/swipe"
            app:swipeEnable="true"
            android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="90dp">
        <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:button="@drawable/item_cart_check_bg"/>
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:scaleType="fitXY"
                   android:id="@+id/iv_good_in_order"
                   android:layout_toRightOf="@+id/checkbox"
                   android:layout_centerVertical="true"
                   android:src="@drawable/meinv"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:id="@+id/ll_tips"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="15dp"
                      android:layout_toRightOf="@+id/iv_good_in_order"
                      android:layout_toLeftOf="@+id/ll_tips_price"
                      android:layout_centerVertical="true"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:id="@+id/tv_title"
                      android:textColor="@color/text_bg"
                      android:lines="2"
                      android:text="野餐篮水果篮小竹篮野餐篮水果篮小竹篮野餐篮水果篮小竹篮野餐篮水果篮小竹篮"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/important_instance"
                      android:layout_marginTop="5dp"
                      android:textSize="12sp"
                      android:text="已选：野餐篮水果篮小竹篮野餐篮水竹篮野餐篮水"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="15dp"
                      android:id="@+id/ll_tips_price"
                      android:layout_centerVertical="true"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:layout_gravity="right"
                      android:textColor="@color/tv_price_color"
                      android:lines="2"
                      android:text="¥186"/>
            <LinearLayout android:layout_width="75dp"
                          android:layout_height="20dp"
                          android:id="@+id/rl_editor_count"
                          android:layout_toRightOf="@+id/tv_count"
                          android:layout_centerVertical="true"
                          android:orientation="horizontal"
                          android:background="@drawable/attrbute_uncheck_bg">
                <TextView android:layout_width="20dp"
                          android:layout_height="match_parent"
                          android:textSize="14sp"
                          android:id="@+id/tv_add"
                          android:gravity="center"
                          android:textColor="@color/text_bg"
                          android:text="+"/>
                <TextView android:layout_width="35dp"
                          android:layout_height="match_parent"
                          android:text="1"
                          android:id="@+id/et_count"
                          android:inputType="number"
                          android:gravity="center"
                          android:textColor="@color/text_bg"
                          android:textSize="14sp"
                          android:background="@null"/>
                <TextView android:layout_width="20dp"
                          android:layout_height="match_parent"
                          android:textSize="14sp"
                          android:gravity="center"
                          android:id="@+id/tv_reduce"
                          android:text="—"
                          android:textColor="@color/important_instance"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
        <LinearLayout
                android:id="@+id/right_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_editor"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/password_tips"
                    android:gravity="center"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/swipe_detele"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

        </LinearLayout>
    </shopandclient.ssf.com.shopandclient.weiget.bananer.view.SwipeMenuLayout>
</LinearLayout>